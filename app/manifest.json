{
    "name": "__MSG_appName__",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "ja",
    "background": {
        "scripts": [
            "scripts/typetalk.js",
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19-off.png",
            "38": "images/icon-38-off.png"
        },
        "default_title": "Typetalk Notifications"
    },
    "options_page": "options.html",
    "omnibox": {
        "keyword": "Typetalk Notifications"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "styles/main.css"
            ],
            "js": [
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "permissions": [
        "identity",
        "https://typetalk.in/*",
        "https://*.chromiumapp.org/*",
        "storage"
    ]
}